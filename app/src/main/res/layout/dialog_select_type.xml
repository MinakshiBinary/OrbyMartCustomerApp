<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
        android:id="@+id/tv_open_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_selector"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/txtCaptureImage"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_18" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/textTernary" />

    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
        android:id="@+id/tv_open_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_selector"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/txtOpenGallery"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_18" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="1.0dip"
    android:layout_marginLeft="0.5dip"
    android:layout_marginRight="0.5dip"
    android:layout_weight="1"
    android:id="@+id/rl_product1"
    android:background="@drawable/white_selector"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgProduct1"
            android:orientation="vertical"
            android:padding="2.0dip">

            <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                android:id="@+id/tvName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:text="name"
                android:textColor="@color/textColorProduct"
                android:textSize="@dimen/text_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:gravity="center">

                <com.binaryic.customerapp.orbymart.Custom.TextViewRS
                    android:id="@+id/tvOldPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dim_10"
                    android:gravity="center"
                    android:text="Rs 900"
                    android:textColor="@color/textColorOldPrice"
                    android:textSize="@dimen/text_12"/>

                <com.binaryic.customerapp.orbymart.Custom.TextViewRS
                    android:id="@+id/tvSellingPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Rs. 1200"
                    android:textColor="@color/textColorNewPrice"
                    android:textSize="@dimen/text_12"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgProduct1"
            android:layout_width="121dp"
            android:layout_height="155dp"
            android:paddingBottom="8dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="8dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
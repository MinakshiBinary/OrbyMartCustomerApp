<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSave"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.binaryic.customerapp.orbymart.Custom.AnimatedEditText
                        android:id="@+id/etfirstname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8.0dip"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        custom:hint_text="First Name" />

                    <com.binaryic.customerapp.orbymart.Custom.AnimatedEditText
                        android:id="@+id/etlastname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="16.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_weight="1"
                        android:inputType="textPersonName"
                        custom:hint_text="Last Name" />
                </LinearLayout>

                <com.binaryic.customerapp.orbymart.Custom.AnimatedEditText
                    android:id="@+id/etaddress1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:inputType="textPostalAddress"
                    custom:hint_text="Address" />

                <com.binaryic.customerapp.orbymart.Custom.AnimatedEditText
                    android:id="@+id/etLandmark"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:inputType="textPostalAddress"
                    custom:hint_text="Landmark" />
                <com.binaryic.customerapp.orbymart.Custom.AnimatedEditText
                    android:id="@+id/et_area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16.0dip"
                    android:layout_marginRight="16.0dip"
                    android:layout_marginTop="8.0dip"
                    android:inputType="textPostalAddress"
                    custom:hint_text="Area" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.binaryic.customerapp.orbymart.Custom.AnimatedEditText
                        android:id="@+id/etpincode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8.0dip"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="6"
                        custom:hint_text="Pincode" />

                    <com.binaryic.customerapp.orbymart.Custom.AnimatedEditText
                        android:id="@+id/etmobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="16.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_weight="1"
                        android:maxLength="10"
                        android:inputType="number"
                        custom:hint_text="Mobile No" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.binaryic.customerapp.orbymart.Custom.AnimatedEditText
                        android:id="@+id/etcity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="8.0dip"
                        android:layout_weight="1"
                        android:inputType="text"
                        custom:hint_text="City" />

                    <com.binaryic.customerapp.orbymart.Custom.AnimatedAutoEditText
                        android:id="@+id/etstate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="16.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_weight="1"
                        android:inputType="text"
                        custom:hint_text="State"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="56.0dip"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        custom:cardBackgroundColor="@color/theme_green"
        custom:cardCornerRadius="2.0dip">

        <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            android:id="@+id/textViewPrimary" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
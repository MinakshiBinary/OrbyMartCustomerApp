<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="This is product version"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="by  "
                    android:textColor="@color/textSecondary"
                    android:textSize="@dimen/text_12" />

                <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Sanket Patel"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_view_selector"
            android:layout_marginRight="2dp"
            android:clickable="true"
            android:gravity="center">

            <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="4dp"
                android:paddingLeft="@dimen/dim_10"
                android:paddingTop="4dp"
                android:text="4.5"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/dim_10"
                android:layout_height="@dimen/dim_10"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="@dimen/dim_10"
                android:src="@drawable/ic_star_fill"
                android:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>
    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="20-July-2016"
        android:textColor="@color/textTernary"
        android:textSize="@dimen/text_12" />
    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
        android:id="@+id/tv_message"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="The overall goals of this chapter were firstly to establish the significance of the general field of study, then identify a place where a new contribution could be made. The bulk of the chapter was on critically evaluating the different methodologies used in this field so as to identify the appropriate approach for investigating the research question"
        android:textColor="@color/textSecondary"
        android:textSize="@dimen/text_12" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/dim_10"
        android:background="@color/backgroundColor"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                    android:id="@+id/tv_rating_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="3.8/5"
                    android:textColor="@color/textPrimary"
                    android:textSize="30sp" />


                <RatingBar
                    android:id="@+id/rating_bar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="2.5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">


                    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                        android:id="@+id/tv_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="182 Reviews"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/textTernary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/dim_10"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="5 star"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_12" />

                    <ProgressBar
                        android:id="@+id/progress_star5"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="7dp"
                        android:minHeight="7dp"
                        android:progress="75"
                        android:progressDrawable="@drawable/horizontalprogress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="4 star"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_12" />

                    <ProgressBar
                        android:id="@+id/progress_star4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="7dp"
                        android:minHeight="7dp"
                        android:progress="65"
                        android:progressDrawable="@drawable/horizontalprogress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="3 star"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_12" />

                    <ProgressBar
                        android:id="@+id/progress_star3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="7dp"
                        android:minHeight="7dp"
                        android:progress="35"
                        android:progressDrawable="@drawable/horizontalprogress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="2 star"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_12" />

                    <ProgressBar
                        android:id="@+id/progress_star2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="7dp"
                        android:minHeight="7dp"
                        android:progress="45"
                        android:progressDrawable="@drawable/horizontalprogress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="1 star"
                        android:textColor="@color/textSecondary"
                        android:textSize="@dimen/text_12" />

                    <ProgressBar
                        android:id="@+id/progress_star1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="7dp"
                        android:minHeight="7dp"
                        android:progress="20"
                        android:progressDrawable="@drawable/horizontalprogress" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
            android:id="@+id/tv_add_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_15"
            android:background="@drawable/blue_border_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Rate and write a Review"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:id="@+id/ll_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:background="@drawable/white_selector"
            android:gravity="center"
            android:padding="4dp">
            <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort by :"
                android:textColor="@color/textSecondary"
                android:textSize="@dimen/text_13" />
            <com.binaryic.customerapp.orbymart.Custom.TextViewPrimary
                android:id="@+id/tv_sort_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Latest"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/text_13" />
            <ImageView
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:src="@drawable/ic_arrow_drop_down"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="none"
            android:visibility="visible" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>